<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.App.Fullscreen"
    >

    <TextView
        android:id="@+id/txtCodCasaPronto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ecco i tuo codice, pronto per essere condiviso"
        android:layout_marginTop="200dp"
        android:textAlignment="center"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/OnPrimary"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodCasaPronto">

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Codice"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/OnPrimary"
        android:textColor="@color/OnPrimary"/>

        <ImageButton
            android:id="@+id/imgShareCod"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/txtNome"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_share_black_24dp"
            style="@style/button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
