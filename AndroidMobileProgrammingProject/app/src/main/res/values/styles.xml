<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        <!-- ... -->
    </style>

    <!-- Fullscreen theme. -->
    <style name="Theme.App.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="backgroundColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>

        <item name="android:statusBarColor">@color/primaryDarkColor</item>

        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:contextPopupMenuStyle">@style/Widget.MaterialComponents.PopupMenu.ContextMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
    </style>

    <!--TEXT INPUT LAYOUT-->
    <style name="Theme.Widget.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="endIconTint">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>

        <item name="boxStrokeColor">@color/primaryColor</item>
    </style>

    <!--BUTTON-->
    <style name="Theme.Widget.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <!--BUTTON-->
    <style name="Theme.Widget.ButtonRed" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="backgroundTint">@android:color/holo_red_dark</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <!--BUTTON-->
    <style name="Theme.Widget.Button.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="strokeColor">@color/primaryColor</item>
    </style>

    <!--BUTTON-->
    <style name="Theme.Widget.ButtonRed.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
        <item name="strokeColor">@android:color/holo_red_dark</item>
        <item name="android:tint">@android:color/holo_red_dark</item>
    </style>

    <!--Progress Bar-->
    <style name="Theme.Widget.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primaryLightColor</item>
    </style>

    <!-- Card layout. -->
    <style name="Theme.Widget.Card" parent="Widget.MaterialComponents.CardView">
        <!-- ... -->
    </style>

    <!-- Toolbar style -->
    <style name="Theme.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:elevation">4dp</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

    </style>

    <style name="Theme.App.TabLayout">

        <item name="tabTextColor">@android:color/white</item>
        <item name="background">@color/primaryColor</item>

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">@color/primaryLightColor</item>

    </style>

    <style name="Theme.App.NavHeader" parent="@style/ThemeOverlay.AppCompat.Dark">

        <item name="android:background">@color/primaryColor</item>

    </style>

    <style name="Theme.App.TextView" />

    <style name="Theme.App.TextView.Title">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.App.TextView.Subtitle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.App.TextView.Paragraph">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.App.TextView.Loading">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Theme.App.TextView.Muted">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
